    <TextView
        android:id="@+id/tv_title_employee_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_employee_profile"
        android:layout_marginTop="20dp"
        android:text="휴대전화"/>

    <TextView
        android:id="@+id/tv_employee_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_employee_phone"
